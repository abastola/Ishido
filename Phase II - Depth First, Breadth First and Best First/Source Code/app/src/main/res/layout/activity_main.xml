<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4db8ff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arjunbastola.ishido.MainActivity">

    <Button
        android:id="@+id/angry_btn"

        android:text="Breadth-First"
        android:textColor="#000000"
        android:textSize="20sp"

        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:layout_marginBottom="146dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:layout_marginLeft="113dp"
        android:layout_marginStart="113dp" />


    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@mipmap/logomain"
        android:layout_above="@+id/angry_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp" />

    <Button
        android:id="@+id/button"
        android:text="Depth-First"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button2"
        android:text="Best-First"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:textStyle="bold"
        android:layout_alignTop="@+id/angry_btn"
        android:layout_toRightOf="@+id/angry_btn"
        android:layout_toEndOf="@+id/angry_btn"
        android:layout_marginLeft="98dp"
        android:layout_marginStart="98dp" />

    <Button
        android:id="@+id/button3"
        android:text="Branch and Bound"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    Button
        android:id="@+id/button"
        android:text="Best-First "
        android:textColor="#4DB8FF"
        android:textSize="20sp"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/angry_btn"
        android:layout_toEndOf="@+id/angry_btn"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />

    Button
        android:id="@+id/button2"
        android:text="DFS"
        android:textColor="#4DB8FF"
        android:textSize="20sp"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@drawable/buttonshape"
        android:textStyle="bold"
        android:layout_below="@+id/imageView"
        android:layout_toLeftOf="@+id/angry_btn"
        android:layout_toStartOf="@+id/angry_btn"
        android:layout_marginRight="46dp"
        android:layout_marginEnd="46dp" />

    TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The Mind Game"
        android:id="@+id/title_sub"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_above="@+id/angry_btn"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginBottom="140dp" />

</RelativeLayout>
